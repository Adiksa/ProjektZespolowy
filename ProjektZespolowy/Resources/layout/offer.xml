 
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
	<TextView
		android:text="@string/offerTitle"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="5dp"
		android:id="@+id/offerTitle" />
	<ImageView
		android:src="@android:drawable/ic_menu_gallery"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="5dp"
		android:contentDescription="@string/offerPhotoDesc"
		android:layout_below="@id/offerTitle"
		android:layout_centerHorizontal="true"
		android:id="@+id/offerPhoto" />
	<TextView
		android:text="@string/offerDesc"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="5dp"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:layout_below="@id/offerPhoto"
		android:layout_centerHorizontal="true"
		android:id="@+id/offerDesc" />
	<TextView
		android:text="@string/offerPrice"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:layout_below="@id/offerDesc"
		android:layout_centerHorizontal="true"
		android:id="@+id/offerPrice" />
	<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:layout_below="@id/offerPrice"
		android:id="@+id/relativeLayoutOrder"
		android:paddingHorizontal="10dp">
		<TextView
		android:text="@string/orderPriceSum"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:visibility="invisible"
		android:id="@+id/offerAmountText"
		android:layout_centerVertical="true"/>
	<EditText
		android:id="@+id/offerAmount"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:visibility="invisible"
		android:paddingHorizontal="5dp"
		android:inputType="number"
		android:layout_toRightOf="@id/offerAmountText"
		android:maxLength="3"
			android:layout_centerVertical="true"/>
	<TextView
		android:text="@string/offerPrice"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:layout_toRightOf="@id/offerAmount"
		android:visibility="invisible"
		android:id="@+id/offerAmountSum"
			android:layout_centerVertical="true"/>
	</RelativeLayout>
	<Button
        android:text="@string/addToCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
		android:background="@drawable/button_white"
        android:id="@+id/addToCart" 
		android:layout_below="@id/relativeLayoutOrder"
		android:layout_centerHorizontal="true"/>
	<Button
        android:text="@string/removeFromCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
		android:background="@drawable/button_white"
        android:id="@+id/removeFromCart" 
		android:visibility="invisible"
		android:layout_below="@id/relativeLayoutOrder"
		android:layout_centerHorizontal="true"/>
	<ImageView
		android:id="@+id/addToFav"
        android:layout_width="50dp"
        android:layout_height="50dp"
		android:src="@drawable/heart"
		android:layout_below="@id/relativeLayoutOrder"
		android:layout_alignParentRight="true"/>
    <ProgressBar
		android:id="@+id/progressBarOffer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_centerVertical="true"
		android:visibility="invisible"/>
</RelativeLayout>