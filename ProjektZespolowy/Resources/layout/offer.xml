 
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
	<TextView
		android:text="@string/offerTitle"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="5dp"
		android:id="@+id/offerTitle" />
	<ImageView
		android:src="@android:drawable/ic_menu_gallery"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="5dp"
		android:contentDescription="@string/offerPhotoDesc"
		android:layout_below="@id/offerTitle"
		android:layout_centerHorizontal="true"
		android:id="@+id/offerPhoto" />
	<TextView
		android:text="@string/offerDesc"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="5dp"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:layout_below="@id/offerPhoto"
		android:layout_centerHorizontal="true"
		android:id="@+id/offerDesc" />
	<EditText
		android:id="@+id/offerAmonut"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:visibility="invisible"
		android:inputType="numberDecimal"/>
	<TextView
		android:text="@string/offerPrice"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:layout_marginTop="10dp"
		android:layout_below="@id/offerDesc"
		android:layout_centerHorizontal="true"
		android:id="@+id/offerPrice" />
	<TextView
		android:text="@string/offerPrice"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:layout_marginTop="10dp"
		android:layout_marginLeft="30dp"
		android:layout_below="@id/offerPrice"
		android:visibility="invisible"
		android:id="@+id/offerAmmountText" />
	<EditText
		android:id="@+id/offerAmmount"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:visibility="invisible"
		android:layout_below="@id/offerPrice"
		android:inputType="numberDecimal"
		android:layout_toRightOf="@id/offerAmmountText"/>
	<TextView
		android:text="@string/offerPrice"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:layout_marginTop="10dp"
		android:layout_below="@id/offerPrice"
		android:layout_toRightOf="@id/offerAmmount"
		android:layout_centerHorizontal="true"
		android:visibility="invisible"
		android:id="@+id/offerAmmountSum" />
	<Button
        android:text="@string/addToCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
		android:background="@drawable/button_white"
        android:id="@+id/addToCart" 
		android:layout_below="@id/offerAmmount"
		android:layout_centerHorizontal="true"/>
	<Button
        android:text="@string/removeFromCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
		android:background="@drawable/button_white"
        android:id="@+id/removeFromCart" 
		android:visibility="invisible"
		android:layout_below="@id/offerAmmount"
		android:layout_centerHorizontal="true"/>
	<ImageView
		android:id="@+id/addToFav"
        android:layout_width="50dp"
        android:layout_height="50dp"
		android:src="@drawable/heart"
		android:layout_below="@id/offerAmmount"
		android:layout_alignParentRight="true"/>
    <ProgressBar
		android:id="@+id/progressBarOffer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_centerVertical="true"
		android:visibility="invisible"/>
</RelativeLayout>