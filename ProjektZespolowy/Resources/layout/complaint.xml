<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
  <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:id="@+id/mainSection">
    <TextView
      android:text="@string/problemHey"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="?android:attr/textAppearanceLarge"
      android:id="@+id/problemHey" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:id="@+id/problemDesc"
        android:hint="@string/writeHere"
        android:layout_below="@id/problemHey"
        android:maxHeight="200dp"/>
    <ImageView
      android:src="@drawable/ic6b_192x192"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:minHeight="100px"
      android:minWidth="100px"
      android:scaleX="0.5"
      android:scaleY="0.5"
      android:contentDescription="@string/photoDesc"
      android:adjustViewBounds="true"
      android:scaleType="fitCenter"
      android:layout_below="@id/problemDesc"
      android:id="@+id/photoPreview" />
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:id="@+id/txtClickToPick"
      android:text="@string/txtClickToPick"
      android:layout_below="@id/photoPreview"/>
  </RelativeLayout>
  <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/buttons"
    android:layout_below="@id/mainSection"
    android:layout_centerHorizontal="true">
    <Button
      android:text="@string/btn1text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/button_light_yellow"
      android:layout_below="@id/photoPreview"
      android:id="@+id/btn1Complaint" />
    <Button
      android:text="@string/btn2text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/button_light_green"
      android:layout_toRightOf="@id/btn1Complaint"
      android:id="@+id/btn2Complaint" />
  </RelativeLayout>
</RelativeLayout>