<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <ImageView
    android:src="@drawable/ITM"
    android:layout_width="100dp"
    android:layout_height="25dp"
    android:layout_marginTop="5px"
    android:layout_marginLeft="5px"
    android:contentDescription="@string/logoITM"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:id="@+id/logoITM"/>
  <ImageView
    android:src="@drawable/logo1"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_centerHorizontal="true"
    android:contentDescription="@string/logoCentre"
    android:layout_above="@id/hello"
    android:id="@+id/logoCentre" />
  <TextView
    android:text="@string/hello"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_above="@id/loginLayout"
    android:id="@+id/hello"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/password"
        android:id="@+id/loginLayout">
        <EditText
            android:inputType="text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="150dp"
            android:minHeight="25px"
            android:hint="@string/hintLogin"
            android:layout_centerInParent="true"
            android:id="@+id/login"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fontawesome"
            android:layout_toLeftOf="@id/login"
            android:layout_centerVertical="true"
            android:text="@string/loginIcon"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fontawesome"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/password"
        android:text="@string/passwordIcon"/>
    <EditText
        android:inputType="textPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="150dp"
        android:hint="@string/hintPassword"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/password" />
    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/password"
        android:id="@+id/loginButtons"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">
        <Button
            android:text="@string/btnLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/buttonlog_green"
            android:id="@+id/loginButton" />
        <TextView
            android:id="@+id/NoAccount"
            android:text="@string/noAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/loginButton"/>
        <Button
            android:text="@string/btnSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_light_blue"
            android:id="@+id/signUpButton"
            android:layout_below="@+id/NoAccount"/>
        </RelativeLayout>
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="invisible"
        android:id="@+id/LoginsProgressBar"/>
</RelativeLayout>