
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="55dp">
    <ListView
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/complaintList" 
        android:layout_alignParentTop="true"
        android:layout_above="@id/complaintCreate"/>
    <ImageView
		android:src="@drawable/plus"
		android:layout_width="50dp"
		android:layout_height="50dp"
		android:contentDescription="@string/photoDesc"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:scaleType="fitStart"
        android:adjustViewBounds="true"
		android:id="@+id/complaintCreate"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:paddingHorizontal="5dp"/>
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/progressBarComplaintList"
        android:visibility="visible"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/noComplaintsTextView"
        android:text="@string/noComplaints"
        android:layout_centerInParent="true"
        android:textAppearance="?android:attr/textAppearanceMedium"/>
</RelativeLayout>