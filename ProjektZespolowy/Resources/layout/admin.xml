
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TopLeft">
  <TextView
    android:text="@string/comm"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/communicate" />
  <ImageView
    android:src="@android:drawable/ic_menu_gallery"
    android:layout_width="300px"
    android:layout_height="300px"
    android:layout_below="@id/communicate"
    android:id="@+id/photo1" />
  <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/TopRight"
      android:orientation="vertical"
      android:layout_toRightOf="@id/communicate">
    <Button
      android:text="@string/btnScanNFC"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_toRightOf="@id/photo1"
      android:id="@+id/scan" />
    <Button
      android:text="@string/btnFromCamera"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_below="@id/scan"
      android:id="@+id/camera" />
    <Button
      android:text="@string/btnFromGallery"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_below="@id/camera"
      android:id="@+id/gallery" />
  </RelativeLayout>
    <EditText
        android:inputType="textMultiLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/warenty"
        android:layout_below="@id/photo1"
        android:id="@+id/editText1" />
    <ImageView
        android:src="@android:drawable/ic_menu_gallery"
        android:layout_width="300px"
        android:layout_height="300px"
        android:layout_below="@id/editText1"
        android:id="@+id/photo2" />
  <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/BottomRight"
    android:orientation="vertical"
    android:layout_toRightOf="@id/photo2"
    android:layout_below="@id/editText1">
    <Button
        android:text="@string/btnFromCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/photo2"
        android:id="@+id/btn4" />
    <Button
        android:text="@string/btnFromGallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/btn4"
        android:id="@+id/btn5" />
    </RelativeLayout>
    <EditText
        android:inputType="textMultiLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/specs"
        android:layout_below="@id/photo2"
        android:id="@+id/txtEdit2" />
    <EditText
        android:inputType="textMultiLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/name"
        android:layout_below="@+id/txtEdit2"
        android:id="@+id/txtEdit3" />
    <Button
        android:text="@string/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtEdit3"
        android:layout_alignParentRight="true"
        android:id="@+id/furAdd" />
    <Button
        android:text="@string/promotion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/furAdd"
        android:layout_below="@id/txtEdit3"
        android:id="@+id/promotion" />
</RelativeLayout>