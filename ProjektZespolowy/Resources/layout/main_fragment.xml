<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  
            xmlns:android="http://schemas.android.com/apk/res/android"  
            xmlns:app="http://schemas.android.com/apk/res-auto"  
            android:orientation="vertical"  
            android:layout_width="match_parent"  
            android:fitsSystemWindows="true"  
            android:layout_height="match_parent">
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fragmentContainer"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:paddingTop="5dp"
                android:minHeight="30dp"
                android:weightSum="30">
            <ImageButton
                  android:text="@string/btnSuc1"
                  android:src="@drawable/btn1_192x192"
                  android:layout_width="wrap_content"
                  android:layout_height="50dp"
                  android:scaleType="fitCenter"
                  android:background="@drawable/button_white"
                  android:id="@+id/specBtn"
                  android:layout_weight="10"/>
            <ImageButton
                  android:text="@string/btnSuc2"
                  android:src="@drawable/btn2_192x192"
                  android:layout_width="wrap_content"
                  android:layout_height="50dp"
                  android:background="@drawable/button_white"
                  android:scaleType="fitCenter"
                  android:id="@+id/complaintBtn" 
                  android:layout_weight="10"/>
            <ImageButton
                  android:text="@string/btnSuc3"
                  android:src="@drawable/btn3_192x192"      
                  android:layout_width="wrap_content"
                  android:layout_height="50dp"
                  android:background="@drawable/button_white"
                  android:scaleType="fitCenter"
                  android:id="@+id/shopBtn" 
                  android:layout_weight="10"/>
              </LinearLayout>
</RelativeLayout>  
